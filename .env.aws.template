# ========================================

# ===== NEXTAUTH CONFIGURATION =====
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-very-long-random-string

# ===== AWS CORE CONFIGURATION =====
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# ===== DATABASE (PostgreSQL RDS) =====
# Format: postgresql://username:password@hostname:port/database
# Example: postgresql://bstream_user:your_password@bstream-db.cluster-xxxxx.us-east-1.rds.amazonaws.com:5432/bstream
DATABASE_PROVIDER=postgresql
DATABASE_URL=postgresql://bstream_user:your_password@your-rds-endpoint:5432/bstream

# ===== REDIS (ElastiCache) =====
# Format: redis://hostname:port
# Example: redis://bstream-cache.xxxxx.0001.use1.cache.amazonaws.com:6379
REDIS_URL=redis://your-elasticache-endpoint:6379
REDIS_HOST=your-elasticache-endpoint
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=true

# ===== S3 STORAGE =====
AWS_S3_BUCKET=bstream-files-prod
AWS_S3_BACKUP_BUCKET=bstream-backups-prod
AWS_S3_REGION=us-east-1
AWS_S3_UPLOAD_ENDPOINT=https://s3.us-east-1.amazonaws.com

# ===== OAUTH PROVIDERS =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_ID=your-github-app-id
GITHUB_SECRET=your-github-app-secret

# ===== EMAIL SERVICE (AWS SES) =====
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=your-ses-smtp-username
SMTP_PASSWORD=your-ses-smtp-password
SMTP_FROM=noreply@yourdomain.com
SMTP_SECURE=true

# ===== SECURITY & ENCRYPTION =====
AWS_KMS_KEY_ID=your-kms-key-id
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ===== MONITORING & LOGGING =====
AWS_CLOUDWATCH_LOG_GROUP=/aws/lambda/bstream
AWS_CLOUDWATCH_REGION=us-east-1

# ===== PAYMENT PROCESSING =====
STRIPE_SECRET_KEY=sk_test_your_stripe_private_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== FINANCIAL APIS =====
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox  # sandbox, development, or production

# ===== EXTERNAL APIS =====
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# ===== DEVELOPMENT =====
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# ===== PRODUCTION OVERRIDES =====
# Uncomment and modify for production deployment
# NODE_ENV=production
# NEXTAUTH_URL=https://yourdomain.com
# LOG_LEVEL=info
# REDIS_TLS=true

# ===== BACKUP & MAINTENANCE =====
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# ===== FEATURE FLAGS =====
ENABLE_ANALYTICS=true
ENABLE_BANK_SYNC=true
ENABLE_OCR=true
ENABLE_NOTIFICATIONS=true
ENABLE_MULTI_CURRENCY=true
